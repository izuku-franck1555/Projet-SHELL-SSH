# MENU PRINCIPAL FONCTIONNALITES  SERVEUR
function menu-fonct-server()
{
    resize -s 18 83
    clear
    echo -e    "|*********************************************************************************|"
    echo -e    "|                                                                                 |"
    echo -e    "|\t \t \t   FONCTIONNALITES   DU    SERVEUR\t\t\t\t|"
	echo -e    "|                                                                                 |"
	echo -e    "|*********************************************************************************|"
    echo -e "\n \n"
    
    #VARIABLES DU MENU

    me1="\t Envoi  de  la  cle  publique       au   serveur"
    me2="\t Connexion  \t     au    \t    serveur \n"
    me3="\t Deconnexion  \t     du    \t    serveur \n"
    me4="\t Revenir  \t     au  \t    mode    Client  \n"
    me5="\t Quitter"
 
    me1=`echo -e "$me1"`
    me2=`echo -e "$me2"`
    me3=`echo -e "$me3"`
    me4=`echo -e "$me4"`
    me5=`echo -e "$me5"`
    
    #CHOIX DU MENU

    PS3="`echo -e " \n\n Veuillez \t faire  \t  votre  \t  choix :     "`"

    select var in "$me1" "$me2" "$me3" "$me4" "$me5"
    do 
        case $REPLY in 
			1)	
                menu-fonct-server-envoi		
                break
            ;;
    		2)
                menu-fonct-server-conn		
                break
			;;
            3)
                if [ $connexion_client -eq 1 ] 
                    then
                        echo -e " \n Vous   devez   d'   abord    etre   connecte     !"
                    else
                        menu-fonct-server-deconn
                        break
                fi
			;;
            4)
                menu-mode-client	
                break
			;;
            5)	
				exit
			;;
            *)
                PS3="`echo -e " \n Veuillez       faire       un       choix       valide :     "`"
            ;;
		esac	
    done    
}

# FONCTION DU MENU DES FONCTIONNALITES DU CLIENT
function menu-fonct-client()
{
    resize -s 18 83
    clear
    echo -e    "|*********************************************************************************|"
    echo -e    "|                                                                                 |"
    echo -e    "|\t \t \t   FONCTIONNALITES   DU    CLIENT \t\t\t\t|"
	echo -e    "|                                                                                 |"
	echo -e    "|*********************************************************************************|"
    echo -e "\n \n"
    
    #VARIABLES DU MENU

    me1="\t Transfert  \t  de  \t          fichiers \n\n"
    me2="\t Montage  \t  repertoire  \t  distant \n"
    me3="\t Demontage  \t  repertoire  \t  distant \n"
    me4="\t Redirection  \t  de  \t          ports \n"
    me5="\t Revenir  \t  au  \t          mode  Client  \n"
    me6="\t Quitter"
 
    me1=`echo -e "$me1"`
    me2=`echo -e "$me2"`
    me3=`echo -e "$me3"`
    me4=`echo -e "$me4"`
    me5=`echo -e "$me5"`
    me6=`echo -e "$me6"`
    
    #CHOIX DU MENU

    PS3="`echo -e " \n\n Veuillez \t faire  \t  votre  \t  choix :     "`"

    select var in "$me1" "$me2" "$me3" "$me4" "$me5" "$me6"
    do 
        case $REPLY in 
			1)	
                menu-fonct-client-transf		
                break
            ;;
    		2)
                menu-fonct-client-mont		
                break
			;;
            3)
                if [ $montage -eq 1 ] 
                    then
                        echo -e " \n Vous   devez   d'   abord    monter    un   repertoire    !"
                    else
                        menu-fonct-client-demont
                        break
                fi
			;;
        	4)
                menu-fonct-client-redir		
                break
			;;
            5)
                menu-mode-client	
                break
			;;
            6)	
				exit
			;;
            *)
                PS3="`echo -e " \n Veuillez       faire       un       choix       valide :     "`"
            ;;
		esac	
    done
}

# MENU PRINCIPAL DU CLIENT
function menu-mode-client()
{
    resize -s 16 83
    clear
    echo -e    "|*********************************************************************************|"
    echo -e    "|                                                                                 |"
    echo -e    "|\t \t \t       MODE        CLIENT    \t  \t \t \t  |"
	echo -e    "|                                                                                 |"
	echo -e    "|*********************************************************************************|"
    echo -e "\n \n"
    
    #VARIABLES DU MENU

    me1="\t Configurer  \t          le  \t  client \n\n"
    me2="\t Fonctionnalites  \t  du  \t  serveur \n"
    me3="\t Fonctionnalites  \t  du  \t  client \n"
    me4="\t Quitter"

    me1=`echo -e "$me1"`
    me2=`echo -e "$me2"`
    me3=`echo -e "$me3"`
    me4=`echo -e "$me4"`

    #CHOIX DU MENU

    PS3="`echo -e " \n\n Veuillez \t faire  \t  votre  \t  choix :     "`"

    select var in "$me1" "$me2" "$me3" "$me4"
    do 
        case $REPLY in 
			1)
				clear	
                menu-config-client		
                break
            ;;
            2)
                if [ $configuration_client -eq 1 ] 
                    then
                        echo -e " \nVeuillez configurer le client pour avoir acces aux fonctionnalites serveur  !"
                    else
                        menu-fonct-server
                        break
                fi
			;;
    		3)
                if [ $configuration_client -eq 0 -a $connexion_client -eq  1 ] 
                    then
                        echo -e " \n Veuillez connecter le client pour avoir acces a ses fonctionnalites !"
                    elif [ $configuration_client -eq 1 ] 
                        then
                            echo -e " \n Veuillez configurer le client pour avoir acces a ses fonctionnalites !"
                    else
                        menu-fonct-client
                        break
                fi
			;;
        	4)	
				exit
			;;
            *)
                PS3="`echo -e " \n Veuillez       faire       un       choix       valide :     "`"
            ;;
		esac	
    done
}

# FONCTION PRINCIPALE SIMILAIRE A UN MAIN 
function main()
{
    configuration_client=1
    connexion_client=1
    montage=1
    menu-mode-client


}

main
echo "BOnjour"