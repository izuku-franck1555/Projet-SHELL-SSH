    echo -e    "|                                                                                 |"
	echo -e    "|*********************************************************************************|"
    echo -e    "| VOUS  POUVEZ  MONTER VIRTUELLEMENT UN REPERTOIRE DISTANT AFIN DE FACILITER VOS  |"
